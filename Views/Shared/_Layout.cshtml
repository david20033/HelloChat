<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloChat.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HelloChat</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                    <form id="searchForm" asp-action="Search" asp-controller="Home" method="get">
                        <div class="position-relative">
                            <input id="searchInput" class="form-control ps-4 pe-5 rounded-pill shadow-sm" type="search" placeholder="Search User" aria-label="Search" name="query" style="width: 200px; height: 36px;" autocomplete="off">
                            <button class="btn position-absolute end-0 top-50 translate-middle-y me-2 p-0 border-0 bg-transparent text-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                            <div id="searchResults" class="list-group position-absolute w-100 mt-1" style="display: none; z-index: 1000;"></div>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" >
            @RenderBody()
        </main>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HelloChat - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("input", function () {
                var query = $(this).val();
                if (query.length >= 2) {
                    $.ajax({
                        url: "/Home/SearchUsers",
                        type: "GET",
                        data: { query: query },
                        success: function (data) {
                            $("#searchResults").empty().show();
                            if (data.length === 0) {
                                $("#searchResults").append('<div class="list-group-item">No results found</div>');
                            } else {
                                $.each(data, function (i, user) {
                                    $("#searchResults").append('<a href="/Profile?id=' + user.id + '" class="list-group-item list-group-item-action">' + user.firstName+' '+user.lastName + '</a>');
                                });
                            }
                        }
                    });
                } else {
                    $("#searchResults").hide();
                }
            });

            $(document).on("click", function (e) {
                if (!$(e.target).closest("#searchForm").length) {
                    $("#searchResults").hide();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
