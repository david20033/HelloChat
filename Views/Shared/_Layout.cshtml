        <div class="container">
            &copy; 2025 - HelloChat - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');

            searchInput.addEventListener('focus', function() {
                searchResults.style.display = 'block';
            });

            searchInput.addEventListener('blur', function() {
                setTimeout(() => {
                    searchResults.style.display = 'none';
                }, 200);
            });
        });



        const notificationButton = document.getElementById("notificationButton");
        const notificationContainer = document.getElementById("notificationContainer");
        const notificationList = document.getElementById("notificationList");
        const redDot = document.getElementById("red-dot");
        const dropdown = new bootstrap.Dropdown(notificationButton);

        notificationButton.addEventListener("click", async (e) => {
            redDot.style.display = 'none';
            try {
                const response = await fetch("/Profile/GetUserNotifications");
                const data = await response.json();

                notificationList.innerHTML = '';

                if (data.length === 0) {
                    const noNewElement = document.createElement('div');
                    noNewElement.id = 'no-new';
                    noNewElement.className = 'text-center text-muted py-4 px-3';
                    noNewElement.innerHTML = `
                        <i class="bi bi-bell-slash fs-4 d-block mb-2 text-secondary"></i>
                        No new notifications
                    `;
                    notificationList.appendChild(noNewElement);
                } else {
                    data.forEach(notification => {
                        const item = document.createElement("div");
                        item.classList.add("notification-item");

                        if (notification.isUnread) {
                            item.classList.add("unread");
                        }

                        item.innerHTML = `
                            <a href="/Profile?id=${notification.hrefId}" class="text-decoration-none text-dark d-block">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                                            
                                        </div>
                                    </div>
                                    <div>
                                        <p class="mb-1">${notification.content}</p>
                                        <p class="text-muted small mb-0">${notification.timeAgo || ''}</p>
                                    </div>
                                </div>
                            </a>
                        `;

                        notificationList.appendChild(item);
                    });
                }
            } catch (err) {
                console.error("Error fetching notifications", err);

                notificationList.innerHTML = `
                    <div class="text-center text-danger py-4 px-3">
                        <i class="bi bi-exclamation-circle fs-4 d-block mb-2"></i>
                        Failed to load notifications
                    </div>
                `;
            }
        });

        $(document).ready(function () {
            $("#searchInput").on("input", function () {
                var query = $(this).val();
                if (query.length >= 2) {
                    $.ajax({
                        url: "/Home/SearchUsers",
                        type: "GET",
                        data: { query: query },
                        success: function (data) {
                            $("#searchResults").empty().show();
                            if (data.length === 0) {
                                $("#searchResults").append('<div class="list-group-item">No results found</div>');
                            } else {
                                $.each(data, function (i, user) {
                                    $("#searchResults").append('<a href="/Profile?id=' + user.id + '" class="list-group-item list-group-item-action">' + user.firstName+' '+user.lastName + '</a>');
                                });
                            }
                        }
                    });
                } else {
                    $("#searchResults").hide();
                }
            });

            $(document).on("click", function (e) {
                if (!$(e.target).closest("#searchForm").length) {
                    $("#searchResults").hide();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
