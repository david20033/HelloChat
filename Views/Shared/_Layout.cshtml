<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloChat.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-primary">Hello</span>Chat
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    More...
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <form id="searchForm" asp-action="Search" asp-controller="Home" method="get" class="d-flex me-3">
                        <div class="position-relative">
                            <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                            <input id="searchInput" class="form-control ps-5 pe-4 rounded-pill" type="search"
                                   placeholder="Search users..." aria-label="Search" name="query" autocomplete="off">
                            <div id="searchResults" class="search-dropdown shadow-lg rounded"></div>
                        </div>
                    </form>

                    <div class="d-flex align-items-center">
                        <div class="nav-item notification-wrapper me-3 dropdown">
                            <button id="notificationButton" class="btn btn-icon position-relative"
                                    aria-label="Notifications" data-bs-toggle="dropdown" aria-expanded="false">
                                🔔
                                <span id="red-dot" class="notification-indicator"></span>
                            </button>
                            <div id="notificationContainer" class="dropdown-menu notification-dropdown shadow-lg py-0">
                                <div class="notification-header p-3 border-bottom">
                                    <h6 class="m-0 fw-bold">Notifications</h6>
                                </div>
                                <div id="notificationList" class="notification-list p-0">
                                    <div id="no-new" class="text-center text-muted py-4 px-3">
                                        <i class="bi bi-bell-slash fs-4 d-block mb-2 text-secondary"></i>
                                        No new notifications
                                    </div>
                                </div>
                                <div class="notification-footer p-2 border-top text-center">
                                    <a href="#" class="text-decoration-none small">See all notifications</a>
                                </div>
                            </div>
                        </div>

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
        <main role="main" >
            @RenderBody()
        </main>

