 <div class="container"> 
<div class="chat-history">
    <h2>Conversations</h2>
    <input type="text" class="chat-history-search">
    <div class="hisory-chat-cards"">
        @foreach (var item in Model.Friends)
            {
                <div class="item" onclick="window.location.href='@Url.Action("Index", "Home", new { id = item.UserId })'">
                    <div>
                        <img src="@item.ProfileImageUrl" alt="profile-picture">
                    </div>
                    <div>
                        <h3 class="profile-name">@item.Name</h3>
                        @if(item.lastMessage==null){
                            <p class="last-message">No messages</p>
                        }
                        else{
                            <p class="last-message">@item.lastMessage . @item.sentTime</p>
                        }
                    </div>
                </div>
		    }
    </div>
</div>
<div class="chat-box">
    <div class="header">
        <div>
            <img src="/images/blank-profile-picture-973460_960_720.webp" alt="profile-picture">
        </div>
        <div>
            <h3 class="profile-name">David</h3>
            <p class="last-active">Active 1 hour ago</p>
        </div>
    </div>
    <div class="messages">
        <small>06.03 14:49</small>
        <p class="message-from message-balon">when</p>
        <p class="message-to message-balon">this toster</p>
    </div>
    <div class="bottom">
        <input type="text">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
        </svg>
    </div>
</div>
  </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>