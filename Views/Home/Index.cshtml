 <div class="container"> 
<div class="chat-history">
    <h2>Conversations</h2>
    <input type="text" class="chat-history-search">
    <div class="hisory-chat-cards">
        @foreach (var item in Model.Friends)
            {
                <input type="hidden" class="friend-id" value="@item.UserId" />
                <div class="item" onclick="window.location.href='@Url.Action("Index", "Home", new { id = item.UserId })'">
                    <div>
                        <img src="@item.ProfileImageUrl" alt="profile-picture">
                        <div class="online-circle" id="@item.UserId"></div>
                    </div>
                    <div>
                        <h3 class="profile-name">@item.Name</h3>
                        @if(item.lastMessage==null){
                            <p class="last-message">No messages</p>
                        }
                        else{
                            <p class="last-message">@item.lastMessage . @item.sentTime</p>
                        }
                    </div>
                </div>
		    }
    </div>
</div>
<div class="chat-box">
    <div class="header">
        <div>
            <img src="/images/blank-profile-picture-973460_960_720.webp" alt="profile-picture">
        </div>
        <div>
            <h3 class="profile-name">David</h3>
            <p class="last-active">Active 1 hour ago</p>
        </div>
    </div>
        <div class="messages" id="messages">
        <small>06.03 14:49</small>
        @foreach(var m in Model.Messages)
        {
            if(Model.SenderId==m.From_id){
                    <p class="message-to message-balon">@m.Content</p>
            }
            if (Model.ReceiverId == m.From_id)
            {
                <p class="message-from message-balon">@m.Content</p>
            }
        }
@*         <p class="message-from message-balon">when</p>
        <p class="message-to message-balon">this toster</p> *@
    </div>
        <form id="friendRequestForm" asp-controller="Home" asp-action="SendMessage" method="post">
            <div class="bottom">
                <input type="text" id="Content" name="Content" autocomplete="off" placeholder="Type something...">
                <input type="hidden" id="ToId" name="ToId" value="@Model.SenderId">
                <input type="hidden" id="FromId"  value="@ViewBag.FromId">
                <button type="submit" id="sendButton">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                    </svg>
                </button>
            </div>
        </form>
  </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>