<div class="container"> 
    <div class="chat-history">
        <h2>Conversations</h2>
        <input type="text" class="chat-history-search">
        <div class="hisory-chat-cards">
            @foreach (var item in Model.Friends)
            {
                <input type="hidden" class="friend-id" value="@item.UserId" />
                <div class="item ConversationChanger" data-user-id="@item.UserId" data-conversation-id="@item.ConversationId">
                    <div>
                        <img src="@item.ProfileImageUrl" alt="profile-picture">
                        <div class="online-circle" id="@item.UserId"></div>
                    </div>
                    <div>
                        <h3 class="profile-name">@item.Name</h3>
                        @if (item.lastMessage == null)
                        {
                            <p class="last-message">No messages</p>
                        }
                        else
                        {
                            <p class="last-message">@item.lastMessage . @item.sentTime</p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="chat-box">
        <div class="header">
            <div>
                <img src="/images/blank-profile-picture-973460_960_720.webp" alt="profile-picture">
            </div>
            <div>
                <h3 class="profile-name">@Model.Name</h3>
                <p class="last-active" id="last-active">@Model.ActiveString</p>
            </div>
        </div>
        <div class="messages" id="messages">
            <small>06.03 14:49</small>
            @foreach(var m in Model.Messages)
            {
                string DivClass = "";
                string PClass = "";
                if (m.isDeleted)
                {
                    DivClass = "no-click";
                    PClass = "message-removed";
                }
                if(m.Id==Model.LastSeenMessageId){
                    ViewData["Position"] = "right";
                    <div class="message-row from @DivClass">
                        <partial name="_ReactionContainerPartial" />
                        <svg class="message-options deleteOwnMessage" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        <svg class="message-options React" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
                        </svg>
                        <div class="message-container" style="order:1;">
                            <p class="message-from message-balon @PClass" id="@m.Id">
                                @m.Content
                                <small class="seen-time"><strong>Read</strong> @(m.SeenTime.HasValue ? m.SeenTime.Value.ToString("HH:mm") : "")</small>
                            </p>
                            <partial name="_MessageReactionPartial" model="@m" />
                        </div>
                    </div>
                    continue;
                }
                if(Model.SenderId==m.From_id&&!m.isLocalDeleted){
                    ViewData["Position"] = "left";
                    <div class="message-row to @DivClass">
                        <partial name="_ReactionContainerPartial" />
                        <svg class="message-options deleteSenderMessage" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        <svg class="message-options React" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
                        </svg>
                        <div class="message-container" style="order:0;">
                            <p class="message-to message-balon @PClass" id="@m.Id">@m.Content</p>
                            <partial name="_MessageReactionPartial" model="@m" />
                        </div>
                    </div>
            }
            if (Model.ReceiverId == m.From_id)
            {
                    ViewData["Position"] = "right";
                    <div class="message-row from @DivClass">
                        <partial name="_ReactionContainerPartial" />
                        <svg class="message-options deleteOwnMessage" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        <svg class="message-options React" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z" />
                        </svg>
                        <div class="message-container" style="order:1;">
                            <p class="message-from message-balon @PClass" id="@m.Id">@m.Content</p>
                            <partial name="_MessageReactionPartial" model="@m" />
                        </div>
                    </div>
            }
        }
@*         <p class="message-from message-balon">when</p>
        <p class="message-to message-balon">this toster</p> *@
    </div>
        <form id="friendRequestForm" asp-controller="Home" asp-action="SendMessage" method="post">
            <div class="bottom">
                <input type="text" id="Content" name="Content" autocomplete="off" placeholder="Type something...">
                <input type="hidden" id="ToId" name="ToId" value="@Model.SenderId">
                <input type="hidden" id="FromId"  value="@ViewBag.FromId">
                <button type="submit" id="sendButton">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                    </svg>
                </button>
            </div>
        </form>
  </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
    
