@using HelloChat.Enums
@model ICollection<HelloChat.ViewModels.FriendsViewModel>

@section Styles {
    <link href="/css/Home.css" rel="stylesheet" />
}

<div class="container1"> 
    <div class="friends-list">
        <h2>Conversations</h2>
        <input type="text" class="search-box" placeholder="Search friends...">
        <input type="hidden" id="FromId" value="@ViewBag.FromId">

        @foreach (var item in Model)
        {
            <input type="hidden" class="friend-id" value="@item.UserId" />
            <div class="friend ConversationChanger" data-user-id="@item.UserId" data-conversation-id="@item.ConversationId">
                <div class="image-div">
                    <img src="@item.ProfileImageUrl" alt="profile-picture">
                    <div class="online-circle" id="@item.UserId"></div>
                </div>
                <div class="friend-info">
                    <div class="friend-name">@item.Name</div>

                    @if (item.lastMessage == null)
                    {
                        <div class="last-message">No messages</div>
                    }
                    else if (item.isLastMessageSeen == true)
                    {
                        <div class="last-message">@item.lastMessage . @item.sentTime</div>
                    }
                    else
                    {
                        <div class="last-message"><b>@item.lastMessage . @item.sentTime</b></div>
                    }
                </div>

                @if (item.isLastMessageSeen == true || item.isLastMessageSeen == null)
                {
                    <div class="new-message" style="display:none"></div>
                }
                else
                {
                    <div class="new-message" style="display:block"></div>
                }
            </div>
        }

        <h3 class="recommend-title">People you may know</h3>

        @foreach (var rec in ViewBag.RecommendedFriends)
        {
            <div class="recommended-friend">
                <div class="rec-image-div">
                    <img src="@rec.ProfileImageUrl" alt="profile-picture">
                </div>
                <div class="rec-info">
                    <div class="rec-name">@rec.Name</div>
                    <div class="rec-reason">@rec.Reason</div>
                </div>
                <button class="add-friend-btn" data-user-id="@rec.UserId">Add +</button>
            </div>
        }
    </div>

    <div class="chat-container" id="chat-container"></div>
    <div class="info-container" id="info-container"></div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img id="modalImage" class="img-fluid" style="max-height: 90vh;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<audio id="notificationSound" src="/Sounds/mixkit-software-interface-start-2574.wav" preload="auto"></audio>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
