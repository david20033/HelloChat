@model HelloChat.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="text-center">
                @if (Model.ProfilePicturePath != null)
                {
                    <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/150" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                }
            </div>
        </div>

        <div class="col-md-8">
            <h2>@Model.FullName</h2>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    </div>
</div>
