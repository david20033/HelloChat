@model HelloChat.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container">

    <div class="row">
        <div class="col-md-4">
            <div class="text-center">
                @if (Model.ProfilePicturePath != null && Model.ProfilePicturePath != "")
                {
                    <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                }
                else
                {
                    <img src="/images/blank-profile-picture.webp" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                }
            </div>
        </div>

        <div class="col-md-8">
            <h2>@Model.FullName</h2>
            <p><strong>Email:</strong> @Model.Email</p>
            <div class="d-flex justify-content-center mt-4">
                <button class="btn btn-outline-primary me-2" style="width: 120px;">Add Friend</button>
                <button class="btn btn-outline-success" style="width: 120px;">Send Message</button>
            </div>
        </div>
    </div>
</div>
